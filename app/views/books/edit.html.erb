<h2>Editing Book</h2>
<div class="field">
<%= form_with model: @book do |f| %>
    <%= f.label :Title %><br />
    <%= f.text_field :title, autofocus: true, autocomplete: "title" %><br />
    <%= f.label :Opinion %><br />
    <%= f.text_area :body, autofocus: true, autocomplete: "Opinion" %><br />
    <%= f.submit "Update book" %>
  <% end %>

  <%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %>
</div>