<!-- error -->
<% if @book.errors.any? %>
  <ul class="alert-error">
    <h6 class="alert-error">
      <%= @book.errors.count %>errors prohibited this obj from being saved:
    </h6>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h2>Editing Book</h2>
<div class="field">
<%= form_with model: @book do |f| %>
    <%= f.label :Title %><br />
    <%= f.text_field :title, autofocus: true, autocomplete: "title" %><br />
    <%= f.label :Opinion %><br />
    <%= f.text_area :body, autofocus: true, autocomplete: "Opinion" %><br />
    <%= f.submit "Update Book" %>
  <% end %>

  <%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %>
</div>