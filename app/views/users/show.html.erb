<!-- error -->
<% if @book.errors.any? %>
  <ul class="alert-error">
    <h6 class="alert-error">
      <%= @book.errors.count %>errors prohibited this obj from being saved:
    </h6>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container">
  <div class="row no-gutters">
    <!-- 部分テンプレート呼び出し -->
    <div class="col-md-3">
      <%= render 'books/info', user: @user, book: @book %>
    </div>

    <!-- 右側コンテンツ -->
    <!-- ログイン後ヘッダー「Home」クリック -->
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
        <table>
          <tr>
          <th></th>
          <th>Title</th>
          <th>Option</th>
          </tr>
            <% @books.each do |book| %>
              <tr>
              <td><%= link_to(user_path(book.user.id)) do %>
                <%= image_tag(book.user.get_user_image(100, 100)) %>
              <% end %></td>
                </td>
                <td><%= link_to book_path(book.id) do %>
                  <%= book.title %>
                </td>
                <td><%= book.body %></td>
                <% end %>
              </tr>
            <% end %>
        </table>
    </div>

  </div>
</div>
