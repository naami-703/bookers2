<!-- error -->
<% if @book.errors.any? %>
<ul class="alert-danger" role="alert">
  <h6 class="alert-heading">
    <%= @book.errors.count %>errors prohibited this obj from being saved:
  </h6>
  <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
</ul>
<% end %>

<div class="container">
  <div class="row no-gutters">
    <!-- 部分テンプレート呼び出し -->
    <div class="col-md-3">
      <%= render 'books/info', user: @user, book: @book %>
    </div>

    <!-- 右側コンテンツ -->
    <!-- ログイン後ヘッダー「Users」クリック -->
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
          <table>
            <tr>
            <th>Image</th>
            <th>Name</th>
            <th></th>
            </tr>
            <% if @users.present? %>
            <% @users.each do |user| %>
              <tr>
              <td><%= image_tag user.get_user_image(100, 100) %>
              <td><%= user.name %></td>
              <td><%= link_to "Show", user_path(user.id) %></td>
            </tr>
            <% end %>
          <% end %>
          </table>
    </div>
  </div>
</div>




