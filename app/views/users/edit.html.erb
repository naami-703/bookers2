<h2>User info</h2>
<div class="field">
<%= form_with model: @user do |f| %>
  <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %><br />
    <%= f.file_field :image, accept: "iomage/*" %><br />
    <%= f.label :introduction %><br />
    <%= f.text_area :introduction, autofocus: true, autocomplete: "introdction" %><br />
    <%= f.submit "Update User" %>
  <% end %>
</div>