<!-- error -->
<% if @user.errors.any? %>
<ul class="alert-danger" role="alert">
  <h6 class="alert-heading">
    <%= @user.errors.count %>errors prohibited this obj from being saved:
  </h6>
  <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
</ul>
<% end %>

<h2>User info</h2>
<div class="field">
<%= form_with model: @user do |f| %>
  <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %><br />
    <%= f.file_field :profile_image, accept: "image/*" %><br />
    <%= f.label :introduction %><br />
    <%= f.text_area :introduction, autofocus: true, autocomplete: "introdction" %><br />
    <%= f.submit "Update User" %>
  <% end %>
</div>